@model LMS.Entities.PermanentDeposit
@{
    ViewBag.Title = "Add";
}

@using (Html.BeginForm("Add", "PermanentDeposit", FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">নতুন আমানত </h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">

                    <div class="form-group ">
                        @Html.LabelFor(model => model.Date, new { @class = "col-sm-4 control-label text-left" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Date, new { @class = "form-control datePicker" })
                            @Html.ValidationMessageFor(model => model.Date)
                        </div>
                    </div>
                    <div class="form-group ">
                        @Html.LabelFor(model => model.Depositor, new { @class = "col-sm-4 control-label text-left" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Depositor, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Depositor)
                        </div>
                    </div>
                    <div class="form-group ">
                        @Html.LabelFor(model => model.FatherName, new { @class = "col-sm-4 control-label text-left" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.FatherName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.FatherName)
                        </div>
                    </div>  
                    <div class="form-group ">
                        @Html.LabelFor(model => model.MothersName, new { @class = "col-sm-4 control-label text-left" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.MothersName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MothersName)
                        </div>
                    </div> 
                    <div class="form-group ">
                        @Html.LabelFor(model => model.PresentAddress, new { @class = "col-sm-4 control-label text-left" })
                        <div class="col-sm-8">
                            @Html.TextAreaFor(model => model.PresentAddress, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PresentAddress)
                        </div>
                    </div>
                    <div class="form-group ">
                        @Html.LabelFor(model => model.ParmanentAddress, new { @class = "col-sm-4 control-label text-left" })
                        <div class="col-sm-8">
                            @Html.TextAreaFor(model => model.ParmanentAddress, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ParmanentAddress)
                        </div>
                    </div>
                    <div class="form-group ">
                        @Html.LabelFor(model => model.MobileNo, new { @class = "col-sm-4 control-label text-left" })
                        <div class="col-sm-8">
                            @Html.TextAreaFor(model => model.MobileNo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MobileNo)
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                   
                    <div class="form-group ">
                        @Html.LabelFor(model => model.Amount, new { @class = "col-sm-4 control-label text-left" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(model => model.Amount, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Amount)
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <a href="@Url.Action("Index","Cost")" class="btn btn-danger">ক্যান্সেল</a>
            <button type="submit" class="btn btn-info pull-right">সেভ</button>
        </div>
        <!-- /.box-footer-->
    </div>
}
<!-- /.box -->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}


