@model IEnumerable<LMS.Entities.Cost>
<div class="box">
    <div class="box-header">
        <h3 class="box-title">খরচ  সমূহ</h3>

        <div class="box-tools">
            <a class="btn btn-sm btn-success" href="@Url.Action("Add","Cost")"><i class="fa fa-plus"></i></a>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body no-padding">
        <table class="table table-bordered">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Date)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().CostDetail)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Amount)</th>
                <th></th>
            </tr>
       
                @foreach (var loan in Model)
                {
                    <tr>
                       
                        <th>@loan.Date.DateFormat()</th>
                        <th>@Html.DisplayFor(model => loan.CostDetail)</th>
                        <th>@Html.DisplayFor(model => loan.Amount)</th>
                       
                        <th>
                            <a class="btn btn-sm btn-success" href="@Url.Action("Add","Group")"><i class="fa fa-edit"></i></a>
                            <a class="btn btn-sm btn-danger" href="@Url.Action("Add","Group")"><i class="fa fa-times"></i></a>
                        </th>

                    </tr>
                }
        </table>
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
