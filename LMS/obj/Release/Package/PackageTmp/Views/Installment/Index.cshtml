@model IEnumerable<LMS.Entities.Installment>
<div class="box">
    <div class="box-header">
        <h3 class="box-title"></h3>

        <div class="box-tools">
            <a class="btn btn-sm btn-success" href="@Url.Action("Add","Installment")"><i class="fa fa-plus"></i></a>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body no-padding">
        <table class="table table-bordered">
            <tr>
                <th></th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Date)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().MemberId)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().InstallmentNo)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Submit)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Undo)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Profit)</th>
                <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Payment)</th>
             
                <th></th>

            </tr>
            @{

                foreach (var installment in Model)
                {
                    <tr>
                        <th><img height="50" width="50" src="@Url.Content(installment.Member.Image)"></th>
                        <th>@installment.Date.DateFormat()</th>
                        <th>@Html.DisplayFor(model => installment.Member.MemberName)</th>
                        <th>@Html.DisplayFor(model => installment.InstallmentNo)</th>
                        <th>@Html.DisplayFor(model => installment.Submit)</th>
                        <th>@Html.DisplayFor(model => installment.Undo)</th>
                        <th>@Html.DisplayFor(model => installment.Profit)</th>
                        <th>@Html.DisplayFor(model => installment.Payment)</th>
                       
                        <th>
                            <a class="btn btn-sm btn-success" href="@Url.Action("Add","Group")"><i class="fa fa-edit"></i></a>
                            <a class="btn btn-sm btn-danger" href="@Url.Action("Add","Group")"><i class="fa fa-times"></i></a>
                        </th>

                    </tr>
                }
            }
        </table>
    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->
